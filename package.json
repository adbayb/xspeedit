{
  "private": true,
  "scripts": {
    "prepush": "lint-staged",
    "postinstall": "npm run install:core && npm run install:widget && npm run install:node",
    "install:core": "cd packages/xspeedit-core && npm install",
    "install:widget": "cd packages/xspeedit-widget && npm install",
	"install:node": "cd packages/xspeedit-node && npm install",
	"start:widget": "cd packages/xspeedit-widget && npm start",
	"test:update": "jest -- --updateSnapshot",
    "test": "jest",
    "format": "prettier --write **/*.{js,jsx,json,css}",
	"lint": "eslint ."
  },
  "author": "Ayoub Adib <adbayb@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "8.0.3",
    "coveralls": "3.0.0",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "4.12.1",
    "eslint-plugin-jest": "21.3.2",
    "eslint-plugin-prettier": "2.3.1",
    "eslint-plugin-react": "7.5.1",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "lint-staged": "6.0.0",
    "prettier": "1.8.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">= 6.12.0"
  }
}
