{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"commonjs": true,
		"jest/globals": true
	},
	"globals": {
		"shallow": true,
		"mount": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2017,
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jest/recommended"],
	"plugins": ["react", "prettier", "jest"],
	"rules": {
		"prettier/prettier": "error",
		"complexity": ["error", 5],
		"no-console": "off"
	}
}
